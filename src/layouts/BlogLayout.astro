---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout title="JP's blog">
    <h2 class="blog-title">{frontmatter.title}</h2>
    <span class="date-item">{frontmatter.date}</span>
    <slot />
</BaseLayout>

<style is:global>
    .blog-title {
        margin-bottom: 0;
    }

    .date-item {
        color: #828282;
    }
    img {
        max-width: 100%;
        max-height: auto;
    }
    .astro-code {
        padding-top: 0.4em;
        padding-left: 1em;
        padding-bottom: 1em;
    }
</style>
