---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import PostLink from "../components/PostLink.astro";

let posts = await Astro.glob("./blog/*.md*");
if (posts.length < 3) {
	posts = posts;
} else {
	posts = posts.slice(0, 2);
}
---
<BaseLayout title="Home">
	<div class="bio">
		<p>
			Hi I am Jaswanth, a Final Year Undergrad student studying Computer
			Science with a specialization in Artifical Intelligence. Apart from
			course work i like in Distributed Systems, Language Design,
			Networking and Web Development.
		</p>
		<p>
			I am currently working on a distibuted data store and also on-prem Kubernetes infra setup for my internship
		</p>
	</div>
	<div class="project">
		<h3>Projects</h3>
		<div class="projectList">
			<ProjectCard
				heading="CodeCompete"
				desc="1v1 code platform for friends to compete to solve cp problems."
				link="https://github.com/JaswanthP6878/CodeCompete"
			/>
			<ProjectCard
				heading="MoviesApi"
				desc="a rate-limited web api for movie info"
				link="https://github.com/JaswanthP6878/MoviesAPI"
			/>
			<ProjectCard
				heading="Snippet Box"
				desc="github-gist inspired site to post snippets of info",
				link="https://github.com/JaswanthP6878/snippet-box"
			/>
		</div>
	</div>

	<div class="blogPosts">
		<h3>Blog</h3>
		<ul class="postList">
			{
				posts.map((post) => {
					return (
						<PostLink
							title={post.frontmatter.title}
							url={post.url}
							date={post.frontmatter.date}
						/>
					);
				})
			}
		</ul>
	</div>

	<h4 class = "allposts"> <a href="/blog">All posts &rightarrow;</a></h4>
</BaseLayout>

<style>
	.bio {
		margin-top: 1em;
	}

	.projectList {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: space-between;
		row-gap: 10px;
	}
	.postList {
		margin-left: 0;
		padding-left: 0;
		list-style: none;
		min-height: 20vh;
	}
	
	.allposts {
		text-align: end;
	}
	.allposts a {
		text-decoration: none;
		color: black;

	}
	.allposts a:hover {
		text-decoration-line: underline;
		color: black;
		
	}
</style>
