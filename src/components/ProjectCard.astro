---
const { heading, desc, link } = Astro.props;
---

<div class="project">
    <a href={link}>
        <div class="heading">
            {heading}
            <span class="arrow">&rightarrow;</span>
        </div>
        <p>{desc}</p>
    </a>
</div>

<style>
    .project {
        width: calc(100% / 3.5);
        padding: 1em;
    }
    .project a {
        text-decoration: none;
        color: black;
    }
    .heading {
        text-decoration: underline solid rgb(116, 115, 115) 0.1em;
        width: 100%;
        display: flex;
    }
    .arrow {
        display: none;
        margin-left: auto;
    }
    .project:hover {
        background-color: lightgrey;
        cursor: grab;
    }
    .project:hover .heading {
        text-decoration: underline solid lightgray 0.2em;
    }

    .project:hover .arrow {
        display: inline;
    }
    .project p {
        margin-top: 0.3em;
    }

    @media screen and (max-width: 450px) {
        .project {
            width: calc(100% / 2.5);
            padding: 1em;
        }
        .project:hover {
            background-color: lightgrey;
            cursor: grab;
        }
        .project:hover .heading {
            text-decoration: underline solid black 1px;
        }
        .project p {
            margin-top: 0.3em;
        }
    }
</style>
