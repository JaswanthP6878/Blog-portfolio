---
const { title, date, url } = Astro.props;
---

<li>
    <h3>
        <a class= "post-link"href={url}>{title}</a>
    </h3>
    <span class="post-meta">{date}</span>
</li>


<style>
    h3 {
        margin-bottom: 0;
    }
    .post-link {
        text-decoration: none;
        color: #2a7ae2;
    }
    .post-link:hover{
        color: black;
        text-decoration: underline solid black 2px ;
    }

    .post-meta {
        color: #828282;
    }

</style>